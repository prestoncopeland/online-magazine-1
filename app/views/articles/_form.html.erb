<%= form_for(@article) do |f| %>
  <ul>
    <% @article.errors.full_messages.each do |error| %>
    <li> <%= error %> </li>
    <% end %>
  </ul>

  <p>
    <%= f.label :title %> <br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %> <br/>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit "Submit Article", :class => "button"%>
  </p>
  <% end %>

  <h3>
    <div> <%= link_to "Back To Articles", articles_path, class: "button" %> </div>
  </h3>